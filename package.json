{
  "name": "phil-conducteur",
  "version": "1.0.0",
  "description": "Social network for philosophers",
  "main": "server.js",
  "scripts": {
    "install-server": "npm install --legacy-peer-deps",
    "install-dependencies": " npm run install-client && npm run install-server --legacy-peer-deps",
    "setup-production": "npm run install-client && npm run build-client && npm install",
    "build-client": "cd client && npm run build --legacy-peer-deps",
    "install-client": "cd client && npm install --legacy-peer-deps",
    "server": "nodemon server --ignore client",
    "client": "npm start --prefix client",
    "start": "concurrently --kill-others-on-fail \" npm run server\" \" npm run client\""
  },
  "author": "Louis Leca",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "config": "^3.3.6",
    "dotenv": "^16.0.3",
    "express": "^4.17.1",
    "express-validator": "^6.12.1",
    "gravatar": "^1.8.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "6.2.4"
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "nodemon": "^2.0.12"
  }
}
